    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        console.log('Monthly Sales Array:', document.getElementById('monthlySalesArray').value);
        console.log('Daily Order Array:', document.getElementById('dailyOrderArray').value);
        console.log('Yearly Order Counts:', document.getElementById('yearlyOrderCounts').value);

        // Functions to display respective charts
        function initChart(dataArray, chartType) {
      const ctx = document.getElementById('myChart').getContext('2d');
      
      // Initialize Chart.js instance
      const myChart = new Chart(ctx, {
        type: 'bar',  // Change to your desired chart type (bar, line, etc.)
        data: {
          labels: dataArray.map(entry => entry.label),
          datasets: [{
            label: `Order Count (${chartType})`,
            data: dataArray.map(entry => entry.count),
            backgroundColor: 'rgba(75, 192, 192, 0.2)',  // Change to your desired color
            borderColor: 'rgba(75, 192, 192, 1)',  // Change to your desired color
            borderWidth: 1,
          }],
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });

      return myChart;
    }

    // Function to update chart data
    function updateChart(chart, dataArray, chartType) {
      chart.data.labels = dataArray.map(entry => entry.label);
      chart.data.datasets[0].label = `Order Count (${chartType})`;
      chart.data.datasets[0].data = dataArray.map(entry => entry.count);
      chart.update();  // Refresh the chart
    }

    // Function to display respective charts
    function displayChart(chartType, button) {
      highlightButton(button);
      
      // Retrieve data based on chartType using your functions
      let dataArray;
      if (chartType === 'Weekly') {
        dataArray = getDailyDataArray();  // Update with your actual function call
      } else if (chartType === 'Monthly') {
        dataArray = getMonthlyDataArray();  // Update with your actual function call
      } else if (chartType === 'Yearly') {
        dataArray = getYearlyDataArray();  // Update with your actual function call
      }

      // Check if the chart is already initialized
      if (!window.myChart) {
        // Initialize the chart if not already initialized
        window.myChart = initChart(dataArray, chartType);
      } else {
        // Update the existing chart with new data
        updateChart(window.myChart, dataArray, chartType);
      }
    }

    // Function to highlight the selected button
    function highlightButton(button) {
      const buttons = document.querySelectorAll('.btn');
      buttons.forEach(btn => btn.classList.remove('btn-xs'));
      button.classList.add('btn-xs');
    }
    </script>  

